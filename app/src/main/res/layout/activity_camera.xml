<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/acPreviewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    </androidx.camera.view.PreviewView>
    <ImageView
        android:id="@+id/acImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|top"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/acTorchIconOn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:src="@drawable/ic_torch_on" />
            <ImageView
                android:padding="10dp"
                android:id="@+id/acTorchIconOff"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_torch_off"
                />
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"

        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/acCaptureImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:fabSize="normal"
            android:layout_marginBottom="50dp"
            android:elevation="9dp"

            />
    </RelativeLayout>

</RelativeLayout>